{
    "name": "StuyTools",
    "version": "1.0",
    "manifest_version": 2,

    "description": "A modern and efficient interface to Student Tools.",

    "content_scripts": [
        {
            "matches": ["https://students-stuyhs.theschoolsystem.net/*"],
            "css": ["style.css"],
            "js": ["jquery.js", "utils.js", "schedule_generator.js", "announcements_generator.js", "page_fetcher.js", "page_parser.js", "page_generator.js", "page_renderer.js", "stuytools.js",  "script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    }, 

    "permissions": [
        "cookies",
        "https://students-stuyhs.theschoolsystem.net/",
        "http://stuy.enschool.org/"
    ]
}
